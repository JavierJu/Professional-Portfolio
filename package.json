{
  "version": "2.0.0",
  "name": "project_portfolio",
  "description": "Portfolio of Javier Ju's web development projects and blog.",
  "keywords": [
    "Javier",
    "Ju",
    "software",
    "engineer",
    "portfolio"
  ],
  "author": "Javier Ju",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/JavierJu/Professional-Portfolio"
  },
  "private": true,
  "homepage": "https://www.javierju.com",
  "scripts": {
  "start": "node server.js",
  "watch:sass": "sass --watch sass/main.scss:public/css/style.css --load-path=sass",
  "compile:sass": "sass --load-path=sass sass/main.scss public/css/style.css --style=compressed --source-map",
  "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' public/css/style.css -o public/css/style.css",
  "dev": "npm-run-all --parallel watch:sass",
  "build": "npm-run-all compile:sass prefix:css",
  "lint": "eslint .",
  "lint:fix": "eslint . --fix",
  "format": "prettier --write ."
},
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^15.14.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.5.0",
    "trim-newlines": "^4.0.2"
  },
  "dependencies": {
    "express": "^4.21.2",
    "lax.js": "^2.0.3",
    "sass": "^1.83.4"
  }
}
